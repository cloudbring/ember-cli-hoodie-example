<div class="row todo-item">
  <div class="col-md-6">
    <div class='todo completed_{{item.completed}}' data-speaker-id={{item.id}}>
        <div class="wrapper">
          <h3>{{view 'ember-contenteditable-view' editable=true value=item.text}}</h3>
          {{view 'ember-contenteditable-view' editable=true value=item.description}}
          {{item.createdAt}}
        </div>
    </div>
  </div>
  <div class="col-md-6">
     {{#link-to 'index' class="btn button full-width"}}back{{/link-to}}
      <button {{action 'toggleTodo' item}} class="btn full-width mt10">
          toggle State
      </button>
      <button {{action 'destroyTodo' item}} class="btn mt10 full-width">
          Delete
      </button>
    notes
  </div>
</div>

        <div class="itemnav">
{{#each todo in allItems}}
    <div  nav-id='{{todo.id}}'>
            <div  class='nav_completed_{{todo.completed}}'>
              {{#link-to 'todo.show' todo}}
                  <div>&#x2587;</div>
              {{/link-to}}
            </div> </div>
{{/each}}
            <div style="clearfix"></div>
        </div>



